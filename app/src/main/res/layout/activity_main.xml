<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="news.zhuoxin.com.news.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#383838"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_main_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_title_home_default" />

        <TextView
            android:id="@+id/txt_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="资讯"
            android:textColor="#f0f8ff"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/img_main_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_title_share_default" />
    </LinearLayout>


        <FrameLayout
            android:id="@+id/center_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

