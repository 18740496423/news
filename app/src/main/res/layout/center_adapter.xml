<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_backgroud"
         app:cardBackgroundColor="#383838"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="20px"
        app:cardElevation="1px">

        <LinearLayout
            android:id="@+id/lyt_center_adapter_backgroud"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_adapter_icon"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_adapter_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/txt_adapter_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/txt_adapter_stamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:text="9sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>